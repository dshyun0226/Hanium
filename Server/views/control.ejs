<html>
<head>
    <meta charset="utf-8">
    <title>NippleJS</title>
    <meta name="viewport" content="width=device-width, initial-scale=0.5, maximum-scale=0.5">
    <link href="/stylesheets/control.css" rel="stylesheet" />
</head>
<body>
<div id="left"></div>
<div id="right"></div>
<script src="/javascripts/nipplejs.min.js" charset="utf-8"></script>
<script>
    var joystickL = nipplejs.create({
        zone: document.getElementById('left'),
        mode: 'static',
        position: {bottom: 100, left: 100},
        color: 'gray',
        size: 100
    });
    var joystickR = nipplejs.create({
        zone: document.getElementById('right'),
        mode: 'static',
        position: {bottom: 100, right: 100},
        color: 'black',
        size: 100

    });
</script>
</body>
</html>